<Window x:Class="SurApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurApp"
        mc:Ignorable="d"
        Title="测量螺丝刀" Height="250" Width="300"        
        WindowState="Maximized">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="文件(F)">
                    <MenuItem Header="新建..." />
                    <MenuItem Header="读入文本数据..." />
                    <Separator/>
                    <MenuItem Header="退出" />
                </MenuItem>

                <MenuItem Header="测量(G)">
                    <MenuItem Header="坐标方位角计算"  Click="Button_Click"/>
                </MenuItem>

                <MenuItem Header="帮助(H)">
                    <MenuItem Header="关于..." />
                </MenuItem>
            </Menu>
            <ToolBar DockPanel.Dock="Top"/>
            <StatusBar DockPanel.Dock="Bottom" Background="Blue"/>
            <Grid Background="SpringGreen"/>
        </DockPanel>


    </Grid>
</Window>
